<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Abreath" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>


        <!-- Secondary brand color. -->
        <item name="listFontColor">@android:color/white</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimary</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>

        <item name="android:textViewStyle">@font/nunito_sans_light</item>
        <item name="fontFamily">@font/nunito_sans_light</item>
        <item name="android:fontFamily">@font/nunito_sans_light</item>
        <item name="android:textColorPrimary">@color/textMainColor</item>

    </style>

    <style name="TextAppearance" parent="android:TextAppearance">
        <item name="android:textViewStyle">@font/nunito_sans_light</item>
        <item name="fontFamily">@font/nunito_sans_light</item>
        <item name="android:fontFamily">@font/nunito_sans_light</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>

    </style>
    <style name="TextAppearanceLogo">
        <item name="fontFamily">@font/expletus_sans_bold</item>
        <item name="android:fontFamily">@font/expletus_sans_bold</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>
    <style name="MyActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:background">@color/primaryTextColor</item>
    </style>

    <style name="Theme.Abreath.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Abreath.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>